<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/loginbg"
    tools:context=".wybor_dan">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="981dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Zamówienie"
                android:textAlignment="center"
                android:textColor="#FF4081"
                android:textSize="26dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Ilość_zup"
                android:layout_width="301dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/customedittext_style"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:hint="Ilość Zup"
                android:textColorHighlight="@color/black" />

            <Spinner
                android:id="@+id/zupy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/Ilość_dańgłównych"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/customedittext_style"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:hint="Ilość Dań Głównych"
                android:textColorHighlight="@color/black" />

            <Spinner
                android:id="@+id/dania_glowne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/Ilość_Napoi"
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/customedittext_style"
                android:drawableLeft="@drawable/ic_baseline_add_24"
                android:gravity="center"
                android:inputType="number"
                android:padding="5dp"
                android:hint="Ilość Napoi"
                android:textColorHighlight="@color/black" />

            <Spinner
                android:id="@+id/napoje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <Button
                android:id="@+id/orderbutton"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Dodaj do Zamówienia"
                android:textSize="18dp"
                app:cornerRadius="20dp" />
            <Button
                android:id="@+id/finalbutton"
                android:layout_width="307dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Utwórz Zamówienie"
                android:textSize="18dp"
                app:cornerRadius="20dp" />

            <TextView
                android:id="@+id/Cena"
                android:layout_width="305dp"
                android:layout_height="26dp"
                android:background="@drawable/customedittext_style"
                android:gravity="center_horizontal"
                android:hint="Cena"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/Wynik"
                android:layout_width="303dp"
                android:layout_height="144dp"
                android:background="@drawable/customedittext_style"
                android:gravity="center_horizontal"
                android:hint="Zamówienie" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>